<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>

    <masterLabel>Show Toast Message</masterLabel>

    <targets>
        <target>lightning__FlowScreen</target>
    </targets>

    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="title" type="String" required="true" />
            <property name="message" type="String" required="true" />
            <property name="variant" type="String" required="true" default="info" description="Accepted values are info, success, warning and error" />
            <property name="mode" type="String" required="true" default="dismissible" description="Accepted values are dismissible, pester and sticky" />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>